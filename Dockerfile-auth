# 1. Builder Stage
FROM eclipse-temurin:25-jdk AS builder
WORKDIR /app

# Gradle Wrapper & Root Settings
COPY gradlew .
COPY gradle ./gradle
COPY build.gradle .
COPY settings.gradle .
COPY gradle.properties .
COPY lint.gradle .

# [중요] 멀티 모듈 의존성 캐싱 (settings.gradle에 있는 모든 모듈 포함)
# Core
COPY core/core-api/build.gradle ./core/core-api/
COPY core/core-enum/build.gradle ./core/core-enum/
COPY core/core-domain/build.gradle ./core/core-domain/
# Storage
COPY storage/db-core/build.gradle ./storage/db-core/
# Support
COPY support/logging/build.gradle ./support/logging/
COPY support/monitoring/build.gradle ./support/monitoring/
COPY support/security/build.gradle ./support/security/
COPY support/token/build.gradle ./support/token/
# Web (Gateway도 구조상 필요할 수 있음)
COPY web/web-auth/build.gradle ./web/web-auth/
COPY web/web-gateway/build.gradle ./web/web-gateway/
# Tests
COPY tests/api-docs/build.gradle ./tests/api-docs/

RUN chmod +x ./gradlew
# 의존성 다운로드 (소스코드 복사 전 실행하여 캐싱 활용)
RUN ./gradlew dependencies --no-daemon || return 0

# 전체 소스 복사
COPY . .

# Auth Service 빌드 (Gateway 제외)
RUN chmod +x gradlew
RUN ./gradlew clean :core:core-api:bootJar -x test --no-daemon

# 2. Runtime Stage
FROM eclipse-temurin:25-jre

WORKDIR /app
COPY --from=builder /app/core/core-api/build/libs/*.jar app.jar

ENV TZ=Asia/Seoul
# Auth는 내부 포트 8081 사용
EXPOSE 8081

ENTRYPOINT ["java", "-jar", "-Djava.security.egd=file:/dev/./urandom", "app.jar"]